<!DOCTYPE html>
<!-- Designined by CodingLab | www.youtube.com/codinglabyt -->
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <!--<title> Responsiive Admin Dashboard | CodingLab </title>-->
    <link rel="stylesheet" href="/CSS/Admin/oders.css">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <div class="sidebar">

        <ul class="nav-links">
          <li>
            <a href="/adminpanel" class="active">
              <i class='bx bx-grid-alt' ></i>
              <span class="links_name">Dashboard</span>
            </a>
          </li>
          <li>
          <li>
            <a href="/addproduct">
              <i class='bx bx-list-ul' ></i>
              <span class="links_name">Add product</span>
            </a>
          </li>
          <li>
            <a href="/stock">
              <i class='bx bx-coin-stack' ></i>
              <span class="links_name">Stock</span>
            </a>
          </li>
          <li>
            <a href="/oders">
              <i class='bx bx-book-alt' ></i>
              <span class="links_name">Orders</span>
            </a>
          </li>
          <li>
            <a href="/payment">
                <i class='bx bx-pie-chart-alt-2'></i>
                <span class="links_name">Revenue</span>
            </a>
        </li>
          <li>
            <a href="/userDetails">
              <i class='bx bx-user' ></i>
              <span class="links_name">Users</span>
            </a>
          </li>
          <li>
            <a href="/viewfeedback">
              <i class='bx bx-message' ></i>
              <span class="links_name">Feedback</span>
            </a>
          </li>
          <li class="log_out">
            <a href="/adminlogout">
              <i class='bx bx-log-out'></i>
              <span class="links_name">Log out</span>
            </a>
          </li>
        </ul>
    </div>
    <section class="home-section">
        <nav>
            <div class="sidebar-button">
                <i class='bx bx-menu sidebarBtn'></i>
                <span class="dashboard">All Oders</span>
            </div>
            <div class="search-box">
                <input type="text" placeholder="Search...">
                <i class='bx bx-search'></i>
            </div>
        </nav>
   
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product ID</th>
                    <th>Customer ID</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Delete</th>
                    <th>Confirm</th>
                </tr>
            </thead>
            <tbody>
                <%let i=0 %>
                
                <% data.forEach(function(item){ %>
                <tr>
                    <td> <%=++i%></td>
                    <td> <%=item.pid %></td>
                    <td> <%=item.username %></td>
                    <td> <%=item.price %></td>
                    <td> <%=item.quantity %></td>
                    <td> <%=item.total%> </td>
                    <td> <a href="/oders/<%=item.pid %>/<%=item.username%>" class="btn btn-danger" >Cancelled </a> </td>
                    <td> <a href="/oder/<%=item.pid %>/<%=item.username%>" class="btn btn-warning" >Delevered </a> </td>
                </tr>
                <% }); %>
               
        
        </table>
       
    </section>
   

    <script src="/public/script/Admin/stock.js"></script>
</body>

</html>