<section class="arrival" id="arrival">

<h1 class="heading"> <span>Products</span> </h1>

<!-- Cards-->
<!---->
<section class="cards">
    <div class="gallery" id="gallery1">
        <% data.forEach(function(item){ %>
        <div class="content1">
            <h4>Category:  <%= item.Catagory %> </h4>
            <hr>
            <img src="/images/<%= item.picture %>" alt="image">
            <hr>
            <h4><%= item.PName %></h4>
            <h4>ID: <%= item.pid %></h4>
            <hr>
            <h4>   <%= item.Discription %> </h4>
            <hr>
            <h4>RS: <%= item.price %></h4>
            <hr>
            <button class="buy-1"><a style="color:white;" href="/productDetails/<%= item.pid %>">Buy</a></button>
            <button class="buy-1"><a style="color:white;" href="/ratings/?id=<%= item.pid %>">Rate</a></button>
            <button class="buy-1"><a style="color:white;" href="/add_to_wishlist/<%= item.pid %>"> Add To WishList</a></button>
        </div>
        <% }); %>
      </div>
    </section>
    <!-- Cards end -->

</section>

